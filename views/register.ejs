<%- include("./includes/error.ejs") %>


    <div class="auth-page">
        <%- include("./includes/rightSidebarAuth.ejs") %>
            <div class="left-page">
                <div class="left-page__title">
                    <h6 class="left-title">ثبت نام کاربر جدید</h6>
                    <p class="left-title">لطفا تمام موارد خواسته شده را با دقت وارد کنید</p>
                </div>
                <form action="/auth/register" method="POST">
                    <div class="form-g">
                        <label for="fullname">نام کاربری</label>
                        <br>
                        <input type="text" name="fullname">
                    </div>
                    <div class="form-g">
                        <label for="email">پست الکترونیک</label>
                        <br>
                        <input type="text" name="email">
                    </div>
                    <div class="form-g">
                        <label for="phone">شماره تماس</label>
                        <br>
                        <input type="text" name="phone">
                    </div>
                    <div class="form-g">
                        <label for="password">کلمه عبور</label>
                        <br>
                        <input type="password" name="password">
                    </div>
                    <div class="form-g">
                        <label for="confirmPassword">تایید کلمه عبور</label>
                        <br>
                        <input type="password" name="confirmPassword">
                    </div>
                    <div class="form-g-btn">
                        <button type="submit">ثبت نام</button>
                    </div>
                    <div class="not-register">
                        <a href="/auth/login">در صورتی که ثبت نام کرده اید <span>از اینجا اقدام کنید</span></a>
                    </div>
                </form>
            </div>
    </div>